.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    .navbar-header
        a.navbar-brand(href="/index") myweibo
    .nav.navbar-nav.navbar-right(style='margin-right:30px')
        - if (locals.user)
            a.navbar-brand(href="/") #{user.name}
            a.navbar-brand(href="/logout") 登出
        - else
            a.navbar-brand(href="/register") 注册
            a.navbar-brand(href="/login") 登录
    form.navbar-form.navbar-right(action='/search' role="search")
        .form-group
            input.form-control(type="text" style="margin-bottom:0" placeholder="请输入关键词")



